{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block body %}
	<div class="container mt-4">
		<div class="row  justify-content-md-center align-items-center">
			<h1 class="text-center">e-Dziennik Rejestracja</h1>
			<div class="col col-md-8 col-lg-4">
				<form action="{{ path('app_student_register_post') }}" method="post">
					<label for="username" class="form-label">Email:</label>
					<input type="text" id="username" class="form-control" name="_email"/>

					<label for="password" class="form-label mt-2">Password:</label>
					<input type="password" id="password" class="form-control" name="_password"/>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<div class="d-flex flex-column align-items-center">
						<button type="submit" class="btn btn-primary w-100 m-3 p-2">Zarejestruj</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
